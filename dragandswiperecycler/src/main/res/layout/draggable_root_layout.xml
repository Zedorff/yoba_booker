<?xml version="1.0" encoding="utf-8"?>
<com.zedorff.dragandswiperecycler.wrapperview.DraggableRoot xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="?android:attr/colorBackground"
    android:foreground="?android:attr/selectableItemBackground">

    <FrameLayout
        android:id="@+id/draggable_content_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/drag_handler"
        android:layout_alignParentStart="true"
        android:layout_alignWithParentIfMissing="true"/>

    <ImageView
        android:id="@+id/drag_handler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_gravity="end"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_reorder_black_24dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:visibility="gone"/>
</com.zedorff.dragandswiperecycler.wrapperview.DraggableRoot>